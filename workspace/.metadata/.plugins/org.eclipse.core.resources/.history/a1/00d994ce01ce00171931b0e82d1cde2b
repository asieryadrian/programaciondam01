		String matriz[]=new String[27];
		String abecedario="ABCDEFGHIJKLMNÑOPQRSTUVWXYZ";
		int contadorletras=0;
		
		while (frase.length()>60) {
			System.out.println("Introduzca una frase de menos de 60 caracteres.");
